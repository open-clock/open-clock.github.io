<!-- Footer Section -->
<footer class="bg-secondary/5 dark:bg-dark-secondary/5 mt-20 py-16">
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            <!-- Company Info -->
            <div>
                <h4 class="font-bold text-lg mb-4">About OpenClock</h4>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                    Open-source time management solution focused on privacy and
                    customization.
                </p>
            </div>

            <!-- Quick Links -->
            <div>
                <h4 class="font-bold text-lg mb-4">Quick Links</h4>
                <ul class="space-y-2">
                    <li>
                        <a
                            href="./about"
                            class="text-sm hover:text-accent dark:hover:text-dark-accent"
                            >About Us</a>
                    </li>
                    <li>
                        <a
                            href="./store"
                            class="text-sm hover:text-accent dark:hover:text-dark-accent"
                            >Store</a>
                    </li>
                    <li>
                        <a
                            href="./privacyPolicy"
                            class="text-sm hover:text-accent dark:hover:text-dark-accent"
                            >Privacy Policy</a>
                    </li>
                    <li>
                        <a
                            href="./termsOfService"
                            class="text-sm hover:text-accent dark:hover:text-dark-accent"
                            >Terms of Service</a>
                    </li>
                </ul>
            </div>

            <!-- Contact Info -->
            <div>
                <h4 class="font-bold text-lg mb-4">Contact</h4>
                <ul class="space-y-2">
                    <li class="text-sm">
                        <a
                            href="mailto:contact@open-clock.org"
                            class="hover:text-accent dark:hover:text-dark-accent"
                        >
                            contact@open-clock.org
                        </a>
                    </li>
                    <li class="text-sm">
                        <a
                            href="https://github.com/open-clock/OpenClock"
                            class="hover:text-accent dark:hover:text-dark-accent"
                        >
                            GitHub Repository
                        </a>
                    </li>
                </ul>
            </div>

            <!-- Newsletter -->
            <div>
                <h4 class="font-bold text-lg mb-4">Stay Updated</h4>
                <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
                    Subscribe to our newsletter for updates.
                </p>
                <form class="flex gap-2">
                    <input
                        disabled
                        type="email"
                        placeholder="Enter your email"
                        class="px-3 py-2 text-sm rounded-lg bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700"
                    />
                    <button
                        disabled
                        type="submit"
                        class="px-4 py-2 bg-accent dark:bg-dark-accent text-white rounded-lg text-sm"
                    >
                        Subscribe
                    </button>
                </form>
            </div>
        </div>

        <!-- Copyright -->
        <div
            class="border-t border-gray-200 dark:border-gray-800 mt-12 pt-8 text-center"
        >
            <p class="text-sm text-gray-600 dark:text-gray-400">
                Â© {new Date().getFullYear()} OpenClock. AGPL V3 Licensed.
            </p>
        </div>
    </div>
</footer>
